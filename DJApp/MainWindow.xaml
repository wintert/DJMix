<Window x:Class="DJAutoMixApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DJ Auto-Mix Pro" Height="800" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource DarkBackgroundBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource MediumBackgroundBrush}" 
                CornerRadius="8" Padding="20,15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸŽµ DJ AUTO-MIX PRO" Style="{StaticResource HeaderText}"/>
                    <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource SubHeaderText}" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentTrackName}" Style="{StaticResource BodyText}" 
                               FontWeight="Bold" FontSize="14"
                               Foreground="{StaticResource PurpleAccentBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Decks and Playlist -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Decks Section -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Deck A -->
                <Border Grid.Column="0" Background="{StaticResource MediumBackgroundBrush}" 
                        CornerRadius="8" Padding="15"
                        AllowDrop="True"
                        DragOver="DeckA_DragOver"
                        Drop="DeckA_Drop">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="DECK A" Style="{StaticResource HeaderText}" 
                                   Foreground="{StaticResource PurpleAccentBrush}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        
                        <StackPanel Grid.Row="1" Margin="0,0,0,8">
                            <TextBlock Text="{Binding DeckA.TrackName}" Style="{StaticResource BodyText}"
                                       FontWeight="SemiBold" TextAlignment="Center" 
                                       TextWrapping="Wrap" MinHeight="20"/>
                            
                            <!-- Waveform Display -->
                            <Border Height="60" Background="#111" CornerRadius="4" Margin="0,5,0,0" ClipToBounds="True" BorderBrush="#333" BorderThickness="1" Padding="2,5">
                                <Grid>
                                    <Viewbox Stretch="Fill">
                                        <Grid>
                                            <Polyline Points="{Binding DeckA.WaveformPoints}" Stroke="#555" StrokeThickness="1" Fill="#333" Opacity="0.5"/>
                                            <Polyline Points="{Binding DeckA.WaveformPoints}" Stroke="{StaticResource PurpleAccentBrush}" StrokeThickness="1" Fill="{StaticResource PurpleAccentBrush}">
                                                <Polyline.OpacityMask>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Offset="{Binding DeckA.Progress}" Color="Black"/>
                                                        <GradientStop Offset="{Binding DeckA.Progress}" Color="Transparent"/>
                                                    </LinearGradientBrush>
                                                </Polyline.OpacityMask>
                                            </Polyline>
                                            <Path Data="{Binding DeckA.BeatGridGeometry}" Stroke="White" StrokeThickness="5" Opacity="0.6"/>
                                        </Grid>
                                    </Viewbox>
                                </Grid>
                            </Border>
                        </StackPanel>
                        
                        <ProgressBar Grid.Row="2" Value="{Binding DeckA.ProgressPercentage, Mode=OneWay}" 
                                     Style="{StaticResource ModernProgressBar}" 
                                     Margin="0,0,0,5"/>
                        
                        <Grid Grid.Row="3" Margin="0,0,0,10">
                            <TextBlock Text="{Binding DeckA.FormattedPosition}" Style="{StaticResource BodyText}" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding DeckA.FormattedTimeRemaining}" Style="{StaticResource BodyText}" HorizontalAlignment="Right" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>

                        <Button Grid.Row="4" Command="{Binding DeckA.PlayPauseCommand}" 
                                Style="{StaticResource ModernButton}"
                                Margin="0,0,0,5" Height="40" FontSize="14">
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="â–¶ PLAY"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DeckA.IsPlaying}" Value="True">
                                                <Setter Property="Text" Value="â¸ PAUSE"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>

                        <!-- Volume and EQ Controls -->
                        <Grid Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Volume -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="VOLUME" Style="{StaticResource SubHeaderText}" FontSize="10" TextAlignment="Center" Margin="0,0,0,5"/>
                                <Slider Value="{Binding DeckA.Volume}" Minimum="0" Maximum="100" Orientation="Vertical" Height="100" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding DeckA.Volume, StringFormat='{}{0:F0}%'}" Style="{StaticResource BodyText}" TextAlignment="Center" FontSize="10"/>
                            </StackPanel>
                            
                            <!-- EQ -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="EQ" Style="{StaticResource SubHeaderText}" FontSize="10" TextAlignment="Center" Margin="0,0,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="HI" Style="{StaticResource BodyText}" FontSize="9" TextAlignment="Center"/>
                                        <Slider Value="{Binding DeckA.EqHigh}" Minimum="0" Maximum="100" Orientation="Vertical" Height="80" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="MID" Style="{StaticResource BodyText}" FontSize="9" TextAlignment="Center"/>
                                        <Slider Value="{Binding DeckA.EqMid}" Minimum="0" Maximum="100" Orientation="Vertical" Height="80" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="LO" Style="{StaticResource BodyText}" FontSize="9" TextAlignment="Center"/>
                                        <Slider Value="{Binding DeckA.EqLow}" Minimum="0" Maximum="100" Orientation="Vertical" Height="80" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="6" Margin="0,15,0,0">
                            <TextBlock Text="{Binding DeckA.BPM, StringFormat='{}{0:F1} BPM'}" 
                                       Style="{StaticResource SubHeaderText}" 
                                       TextAlignment="Center"
                                       Foreground="{StaticResource PurpleAccentBrush}"
                                       FontSize="14" FontWeight="Bold"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Margin="0,0,0,30"/>
                                       
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                <Button Command="{Binding DeckA.NudgeBackwardCommand}" Content="&lt;&lt;" 
                                        Style="{StaticResource ModernButton}" 
                                        Width="30" Height="25" Margin="0,0,5,0" FontSize="10" ToolTip="Nudge Backward (50ms)"/>
                                        
                                <Button Command="{Binding DeckA.SyncCommand}" 
                                        Width="70" Height="25" FontSize="10"
                                        ToolTip="Sync this deck's tempo to Deck B">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                            <Setter Property="Content" Value="âš¡ SYNC"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DeckA.IsSyncActive}" Value="True">
                                                    <Setter Property="Background" Value="#10B981"/>
                                                    <Setter Property="BorderBrush" Value="#059669"/>
                                                    <Setter Property="Content" Value="ðŸ”„ SYNCED"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                <Button Command="{Binding DeckA.NudgeForwardCommand}" Content="&gt;&gt;" 
                                        Style="{StaticResource ModernButton}" 
                                        Width="30" Height="25" Margin="5,0,0,0" FontSize="10" ToolTip="Nudge Forward (50ms)"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Deck B -->
                <Border Grid.Column="2" Background="{StaticResource MediumBackgroundBrush}" 
                        CornerRadius="8" Padding="15"
                        AllowDrop="True"
                        DragOver="DeckB_DragOver"
                        Drop="DeckB_Drop">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="DECK B" Style="{StaticResource HeaderText}" 
                                   Foreground="{StaticResource BlueAccentBrush}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        
                        <StackPanel Grid.Row="1" Margin="0,0,0,8">
                            <TextBlock Text="{Binding DeckB.TrackName}" Style="{StaticResource BodyText}" 
                                       FontWeight="SemiBold" TextAlignment="Center" 
                                       TextWrapping="Wrap" MinHeight="20"/>

                            <!-- Waveform Display -->
                            <Border Height="60" Background="#111" CornerRadius="4" Margin="0,5,0,0" ClipToBounds="True" BorderBrush="#333" BorderThickness="1" Padding="2,5">
                                <Grid>
                                    <Viewbox Stretch="Fill">
                                        <Grid>
                                            <Polyline Points="{Binding DeckB.WaveformPoints}" Stroke="#555" StrokeThickness="1" Fill="#333" Opacity="0.5"/>
                                            <Polyline Points="{Binding DeckB.WaveformPoints}" Stroke="{StaticResource BlueAccentBrush}" StrokeThickness="1" Fill="{StaticResource BlueAccentBrush}">
                                                <Polyline.OpacityMask>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Offset="{Binding DeckB.Progress}" Color="Black"/>
                                                        <GradientStop Offset="{Binding DeckB.Progress}" Color="Transparent"/>
                                                    </LinearGradientBrush>
                                                </Polyline.OpacityMask>
                                            </Polyline>
                                            <Path Data="{Binding DeckB.BeatGridGeometry}" Stroke="White" StrokeThickness="5" Opacity="0.6"/>
                                        </Grid>
                                    </Viewbox>
                                </Grid>
                            </Border>
                        </StackPanel>
                        
                        <ProgressBar Grid.Row="2" Value="{Binding DeckB.ProgressPercentage, Mode=OneWay}" 
                                     Style="{StaticResource ModernProgressBar}" 
                                     Foreground="{StaticResource BlueAccentBrush}"
                                     Margin="0,0,0,5"/>
                        
                        <Grid Grid.Row="3" Margin="0,0,0,10">
                            <TextBlock Text="{Binding DeckB.FormattedPosition}" Style="{StaticResource BodyText}" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding DeckB.FormattedTimeRemaining}" Style="{StaticResource BodyText}" HorizontalAlignment="Right" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>

                        <Button Grid.Row="4" Command="{Binding DeckB.PlayPauseCommand}" 
                                Style="{StaticResource BlueButton}"
                                Margin="0,0,0,5" Height="40" FontSize="14">
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="â–¶ PLAY"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DeckB.IsPlaying}" Value="True">
                                                <Setter Property="Text" Value="â¸ PAUSE"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>

                        <!-- Volume and EQ Controls -->
                        <Grid Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Volume -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="VOLUME" Style="{StaticResource SubHeaderText}" FontSize="10" TextAlignment="Center" Margin="0,0,0,5"/>
                                <Slider Value="{Binding DeckB.Volume}" Minimum="0" Maximum="100" Orientation="Vertical" Height="100" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding DeckB.Volume, StringFormat='{}{0:F0}%'}" Style="{StaticResource BodyText}" TextAlignment="Center" FontSize="10"/>
                            </StackPanel>
                            
                            <!-- EQ -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="EQ" Style="{StaticResource SubHeaderText}" FontSize="10" TextAlignment="Center" Margin="0,0,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="HI" Style="{StaticResource BodyText}" FontSize="9" TextAlignment="Center"/>
                                        <Slider Value="{Binding DeckB.EqHigh}" Minimum="0" Maximum="100" Orientation="Vertical" Height="80" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="MID" Style="{StaticResource BodyText}" FontSize="9" TextAlignment="Center"/>
                                        <Slider Value="{Binding DeckB.EqMid}" Minimum="0" Maximum="100" Orientation="Vertical" Height="80" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="LO" Style="{StaticResource BodyText}" FontSize="9" TextAlignment="Center"/>
                                        <Slider Value="{Binding DeckB.EqLow}" Minimum="0" Maximum="100" Orientation="Vertical" Height="80" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="6" Margin="0,15,0,0">
                            <TextBlock Text="{Binding DeckB.BPM, StringFormat='{}{0:F1} BPM'}" 
                                       Style="{StaticResource SubHeaderText}" 
                                       TextAlignment="Center"
                                       Foreground="{StaticResource BlueAccentBrush}"
                                       FontSize="14" FontWeight="Bold"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Margin="0,0,0,30"/>
                                       
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                <Button Command="{Binding DeckB.NudgeBackwardCommand}" Content="&lt;&lt;" 
                                        Style="{StaticResource BlueButton}" 
                                        Width="30" Height="25" Margin="0,0,5,0" FontSize="10" ToolTip="Nudge Backward (50ms)"/>
                                
                                <Button Command="{Binding DeckB.SyncCommand}" 
                                        Width="70" Height="25" FontSize="10"
                                        ToolTip="Sync this deck's tempo to Deck A">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource BlueButton}">
                                            <Setter Property="Content" Value="âš¡ SYNC"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DeckB.IsSyncActive}" Value="True">
                                                    <Setter Property="Background" Value="#10B981"/>
                                                    <Setter Property="BorderBrush" Value="#059669"/>
                                                    <Setter Property="Content" Value="ðŸ”„ SYNCED"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                <Button Command="{Binding DeckB.NudgeForwardCommand}" Content="&gt;&gt;" 
                                        Style="{StaticResource BlueButton}" 
                                        Width="30" Height="25" Margin="5,0,0,0" FontSize="10" ToolTip="Nudge Forward (50ms)"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Playlist Panel with Drag-Drop -->
            <Border Grid.Column="2" Background="{StaticResource MediumBackgroundBrush}" 
                    CornerRadius="8" Padding="15"
                    AllowDrop="True" 
                    Drop="Playlist_Drop"
                    DragOver="Playlist_DragOver">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="PLAYLIST" Style="{StaticResource HeaderText}" 
                               Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    
                    <TextBlock Grid.Row="0" Text="(Drag files here)" Style="{StaticResource BodyText}" 
                               FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,-5"/>

                    <!-- Playlist Controls -->
                    <WrapPanel Grid.Row="1" Margin="0,10,0,10" HorizontalAlignment="Center">
                        <Button Command="{Binding Playlist.AddTracksCommand}" Style="{StaticResource ModernButton}" Content="âž• Add" Margin="2" Padding="10,5"/>
                        <Button Command="{Binding Playlist.RemoveTrackCommand}" Style="{StaticResource ModernButton}" Content="âž– Remove" Margin="2" Padding="10,5"/>
                        <Button Command="{Binding Playlist.ReAnalyzeBPMCommand}" Style="{StaticResource ModernButton}" Content="ðŸ”„ Re-BPM" Margin="2" Padding="10,5" ToolTip="Re-analyze BPM using C++ engine"/>
                        <Button Command="{Binding Playlist.SavePlaylistCommand}" Style="{StaticResource ModernButton}" Content="ðŸ’¾ Save" Margin="2" Padding="10,5"/>
                        <Button Command="{Binding Playlist.LoadPlaylistCommand}" Style="{StaticResource ModernButton}" Content="ðŸ“‚ Load" Margin="2" Padding="10,5"/>
                        <Button Command="{Binding Playlist.ClearPlaylistCommand}" Style="{StaticResource ModernButton}" Content="ðŸ—‘ï¸ Clear" Margin="2" Padding="10,5"/>
                    </WrapPanel>

                    <!-- Playlist Items -->
                    <ListBox Grid.Row="2" 
                             ItemsSource="{Binding Playlist.Tracks}"
                             SelectedItem="{Binding Playlist.SelectedTrack}"
                             Style="{StaticResource ModernListBox}"
                             ItemContainerStyle="{StaticResource PlaylistItemStyle}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             AllowDrop="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="10" Foreground="{StaticResource TextSecondaryBrush}">
                                            <Run Text="{Binding Duration, StringFormat='{}{0:mm\\:ss}'}"/>
                                            <Run Text=" â€¢ "/>
                                            <Run Text="{Binding BPM, StringFormat='{}{0:F0} BPM'}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Crossfader and Settings Section -->
        <Border Grid.Row="2" Background="{StaticResource MediumBackgroundBrush}" 
                CornerRadius="8" Padding="20,15" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Crossfader -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="CROSSFADER (A â† â†’ B)" Style="{StaticResource SubHeaderText}" TextAlignment="Center" Margin="0,0,0,10"/>
                    <Slider Value="{Binding CrossfaderPosition}" Minimum="0" Maximum="100" Style="{StaticResource ModernSlider}" TickFrequency="10" IsSnapToTickEnabled="False"/>
                </StackPanel>
                
                <!-- Crossfade Duration Setting -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="30,0,0,0" Width="150">
                    <TextBlock Text="CROSSFADE TIME" Style="{StaticResource SubHeaderText}" FontSize="10" TextAlignment="Center" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Slider Value="{Binding CrossfadeDuration}" Minimum="5" Maximum="30" Width="80" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CrossfadeDuration, StringFormat='{}{0}s'}" Style="{StaticResource BodyText}" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Auto-Mix Button -->
        <Button Grid.Row="3" Command="{Binding ToggleAutoMixCommand}"
                Height="60" Margin="0,15,0,0"
                FontSize="18" FontWeight="Bold">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                    <Setter Property="Content" Value="ðŸŽµ START AUTO-MIX"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="{StaticResource PurpleAccent}" Offset="0"/>
                                <GradientStop Color="{StaticResource BlueAccent}" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAutoMixEnabled}" Value="True">
                            <Setter Property="Content" Value="â¹ï¸ STOP AUTO-MIX"/>
                            <Setter Property="Background" Value="#EF4444"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{StaticResource LightBackgroundBrush}" 
                CornerRadius="6" Padding="15,10" Margin="0,15,0,0">
            <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource BodyText}" TextAlignment="Center" FontSize="12"/>
        </Border>
    </Grid>
</Window>
